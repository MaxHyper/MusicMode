{
	"manifest_version": 2,
	"name": "Skipper - Music Mode for YouTube",
	"short_name": "Skipper",
	"description": "AutoSkip to the actual song or video on YouTube!",
	"version": "0.3.4",
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html",
		"default_title": "Skipper"
	},
	"content_scripts": [
		{
		"js": ["jquery-3.2.1.slim.min.js","time_data.js","bg.js"],
		"matches": ["*://*.youtube.com/*"],
    "run_at": "document_start"
	},
	{
	        "matches": ["*://*/*"],
	        "js": ["t.js"],
	        "run_at": "document_idle"
	    }],
	"icons": {
    "48": "icon48.png",
    "128": "icon.png"
  },
	"permissions": [
		"activeTab",
		"tabs",
		"storage",
		"webNavigation"
	]
}
